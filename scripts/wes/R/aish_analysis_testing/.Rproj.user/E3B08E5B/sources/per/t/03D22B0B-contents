p1c2 <- ggplot(plot_data, aes(x = Response, y = log10(nsSNV_all), fill = Response)) +
  geom_boxplot(outlier.shape = NA) +
  geom_jitter(width = 0.2, alpha = 0.5) +
  scale_fill_manual(values = c("Non-Responder" = "#E41A1C", "Responder" = "#377EB8")) +
